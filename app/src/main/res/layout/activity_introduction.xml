<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutIntroduction"
    android:layout_width="match_parent"


    android:layout_height="match_parent"
    tools:context="patrimoine.wcs.fr.toulousemonuments.Introduction">

    <TextView
        android:id="@+id/textViewDescri"
        android:layout_width="324dp"
        android:layout_height="192dp"
        android:layout_marginBottom="188dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:foregroundGravity="center_horizontal"
        android:gravity="center"

        android:text="Decouvre des lieux d'exceptions toulousains et vote pour que l'un d'eux est la chance de se voir attribuer le titre de patrimoine mondial de l'UNESCO."
        android:textSize="20dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="251dp"
        android:layout_height="202dp"
        android:layout_marginBottom="-14dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/churchpink" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="344dp"
        android:layout_height="117dp"
        app:srcCompat="@mipmap/pinklogo"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="26dp" />

</android.support.constraint.ConstraintLayout>